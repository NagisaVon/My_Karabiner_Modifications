{
    "title": "Mouse 4/5 to switch Application on Mac",
    "rules": [
        {
            "description": "Mouse 4 (Lower) Switch Right",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button4"
                    },
                    "to": [
                        {
                            "repeat": false,
                            "key_code": "right_arrow",
                            "modifiers": [
                                "right_control"
                            ],
                            "lazy": false
                        }
                    ]
                }
            ]
        },
        {
            "description": "Mouse 5 (Upper) Switch Left",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button5"
                    },
                    "to": [
                        {
                            "repeat": false,
                            "key_code": "left_arrow",
                            "modifiers": [
                                "right_control"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}